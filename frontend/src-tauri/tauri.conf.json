{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Slave of Capitalism",
  "version": "0.1.0",
  "identifier": "com.ngocphat.expense-manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "bundle": {
    "active": true,
    "targets": "app",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/backend/*": "backend/"
    }
  },
  "app": {
    "windows": [
      {
        "title": "Slave of Capitalism",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  }
}